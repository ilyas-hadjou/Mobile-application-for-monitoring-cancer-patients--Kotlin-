<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChngerPassword">

    <TextView
            android:text="Ancien mot de passe"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableEnd="@drawable/ic_ac_unit_black_24dp"
            android:id="@+id/date_text"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginTop="24dp"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Changer le mot de passe"
            android:textAlignment="center"
            style="@style/toolBarTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView9"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textPassword"
            android:hint="********"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_verified_user_blue"
            android:ems="10"
            android:id="@+id/old_password2"
            android:background="@drawable/edittextsign"
            app:layout_constraintTop_toBottomOf="@+id/date_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Nouveau mot de passe"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableEnd="@drawable/ic_ac_unit_black_24dp"
            android:id="@+id/textView8"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/old_password2" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textPassword"
            android:hint="********"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_verified_user_blue"
            android:ems="10"
            android:id="@+id/new_password2"
            android:background="@drawable/edittextsign"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:text="Confirmer le nouveau mot de passe"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableEnd="@drawable/ic_ac_unit_black_24dp"
            android:id="@+id/textView7"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_password2" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textPassword"
            android:hint="********"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_verified_user_blue"
            android:ems="10"
            android:id="@+id/Cnew_password"
            android:background="@drawable/edittextsign"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <Button
            android:text="Enregistrer"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/enregistrer_password"
            android:textColor="@color/white"
            style="@style/textButton"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/signinbutton2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/Cnew_password"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>