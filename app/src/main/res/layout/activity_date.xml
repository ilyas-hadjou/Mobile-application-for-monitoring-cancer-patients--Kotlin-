<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Date">

    <TextView
            android:text="12:00"
            android:elevation="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:drawablePadding="4dp"

            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_access_time_blue_16dp"
            android:id="@+id/time_text"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            app:layout_constraintTop_toTopOf="@+id/temp_button" app:layout_constraintBottom_toBottomOf="@+id/temp_button"
            app:layout_constraintStart_toEndOf="@+id/temp_button" android:layout_marginStart="16dp"/>
    <TextView
            android:text="27/08/2019"
            android:drawablePadding="4dp"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date_range_blue_16dp"
            android:id="@+id/date_text"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            app:layout_constraintTop_toTopOf="@+id/date_button"
            app:layout_constraintBottom_toBottomOf="@+id/date_button"
            app:layout_constraintStart_toEndOf="@+id/date_button"
            android:layout_marginStart="16dp"/>

    <Button
            android:text="La date "
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/date_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="2dp"
            style="@style/textButton"
            android:background="@drawable/fab_label_backgroiund"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Rendez vous"
            android:textAlignment="center"
            style="@style/toolBarTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/rendez_vous"/>

    <Button
            android:paddingTop="2dp"
            android:text="Le temps"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/temp_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            style="@style/textButton"
            android:background="@drawable/fab_label_backgroiund"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/date_button"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Choisir la date et le temps de votre Rendez vous"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/rendez_vous" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="Enregistrer"
            android:textColor="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/signinbutton2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:id="@+id/Enregistrer_Date" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/time_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>