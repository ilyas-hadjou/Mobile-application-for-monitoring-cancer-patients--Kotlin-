<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView_edit"
            android:background="@color/white"
            tools:context=".Fragment.EditFragment"
>
<androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >
    <Button
            android:text="Déconnexion"
            android:drawableStart="@drawable/ic_cancel_red_24dp"
            android:drawablePadding="8dp"
            style="@style/textButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            app:menu="@menu/navigation_end"
            android:id="@+id/signout"
            android:textColor="@color/white"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:background="@drawable/logout"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="Change mot de passe"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="@style/textButton"
            android:id="@+id/change_password"
            android:textColor="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/signinbutton2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/enregistrer"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textPassword"
            android:hint="********"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_verified_user_blue"
            android:ems="10"
            android:id="@+id/Cnew_password"
            android:background="@drawable/edittextsign"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/time2"/>
    <TextView
            android:text="Ancien mot de passe"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableEnd="@drawable/ic_ac_unit_black_24dp"
            android:id="@+id/time2"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:hint="Modifier le prénom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_edit_blue_24dp"
            android:ems="10"
            android:id="@+id/prenom"
            android:background="@drawable/edittextsign"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Prénom"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView5"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/family_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:hint="Modifier le nom"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_edit_blue_24dp"
            android:ems="10"
            android:id="@+id/family_name"
            android:background="@drawable/edittextsign"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Nom"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/textView4"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/signout"/>
    <TextView
            android:text="E-mail"
            android:elevation="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/time"
            android:textColor="@color/blueyeti"
            android:background="@drawable/name_of_edit"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/prenom" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:inputType="textEmailAddress"
            android:hint="email@examplel.com"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_email_blue"
            android:ems="10"
            android:id="@+id/email"
            android:background="@drawable/edittextsign"
            app:layout_constraintTop_toBottomOf="@+id/time" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_account_circle_blue"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/image_profil"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="User Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="130dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="130dp"
            style="@style/textBlodBlackCentre"
            android:paddingTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/image_profil" android:layout_marginTop="2dp"/>
    <com.agrawalsuneet.dotsloader.loaders.ZeeLoader
            android:id="@+id/progress_barr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:zee_animDuration="300"
            android:visibility="gone"
            app:zee_distanceMultiplier="2"
            app:zee_dotsRadius="24dp"
            app:zee_firstDotsColor="@color/blueyeti"
            app:zee_secondDotsColor="@color/bluecool"
            app:layout_constraintTop_toTopOf="@+id/image_profil"
            app:layout_constraintBottom_toTopOf="@+id/nameTextView"
            app:layout_constraintStart_toStartOf="@+id/image_profil"
            app:layout_constraintEnd_toEndOf="@+id/image_profil"/>
    <Button
            android:text="Enregistrer"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/enregistrer"
            android:textColor="@color/white"
            style="@style/textButton"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:enabled="false"
            android:background="@drawable/signinbutton2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/Cnew_password"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
